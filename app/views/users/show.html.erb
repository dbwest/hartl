<% provide(:title, @user.name) %>

<div class="row">
	<aside>
		<section>
			
				<div>
					<%= gravatar_for @user, size: 80 %>
					
				</div>
				<br/>
				<h1 class="username pull-left"><%= @user.name %></h1>

				<div class="span8">
					<% if @user.microposts.any? %>
						<h3>Microposts (<%= @user.microposts.count %>)</h3>
						<ol class="microposts">
							<%= render @microposts %>
						</ol>
					<% end %>
				</div>
				
			
		</section>
	</aside>
</div>